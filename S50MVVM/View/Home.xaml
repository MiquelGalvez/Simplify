<UserControl x:Class="S50MVVM.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:S50MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="700"
             d:DesignWidth="790">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="WELCOME" Grid.Row="0" Foreground="Green" FontSize="90" HorizontalAlignment="Center" FontFamily="/S50MVVM;component/Fonts/#BrittanyExample-Regular" VerticalAlignment="Top" Margin="0,145,0,0" />
        <TextBlock Text="{Binding Usuari}" FontStyle="Italic" Grid.Row="0" Foreground="Green" FontSize="24" HorizontalAlignment="Center" FontFamily="/S50MVVM;component/Fonts/#BrittanyExample-Regular" VerticalAlignment="Top" Margin="0,254,0,0" />
        <Image Source="../Images/Logo-Simplify2.png" Grid.Row="1" Height="200" Width="200" Margin="293,29,297,121"/>
    </Grid>

</UserControl>
